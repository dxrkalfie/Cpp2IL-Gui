<Window x:Class="Cpp2IL_Gui.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="G Modding Tools" Height="600" Width="900"
        WindowStyle="None" Background="Transparent" AllowsTransparency="True">

    <Window.Resources>
        <Style TargetType="Button">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#007ACC"/>
            <Setter Property="BorderBrush" Value="Transparent"/>
            <Setter Property="Padding" Value="10,6"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" 
                                CornerRadius="6"
                                BorderBrush="{TemplateBinding BorderBrush}"
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#2892FF"/>
                </Trigger>
                <Trigger Property="IsPressed" Value="True">
                    <Setter Property="Background" Value="#005A9E"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style TargetType="TextBox">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Background" Value="#2B2B2B"/>
            <Setter Property="BorderBrush" Value="#555"/>
            <Setter Property="BorderThickness" Value="1.5"/>
            <Setter Property="Padding" Value="8"/>
            <Setter Property="Margin" Value="0,5,0,5"/>
            <Setter Property="FontSize" Value="13"/>
        </Style>

        <Style TargetType="Expander">
            <Setter Property="Background" Value="#2B2B2B"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="Margin" Value="0,10,0,0"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
        </Style>
    </Window.Resources>

    <Border CornerRadius="12" Background="#1F1F1F" BorderBrush="#333" BorderThickness="1">
        <Grid>
            <DockPanel LastChildFill="True">

                <Grid DockPanel.Dock="Top" Height="45" Background="#222" MouseDown="TopBar_MouseDown">
                    <TextBlock Text="Cpp2IL Gui" FontSize="18" Foreground="White"
                               VerticalAlignment="Center" Margin="15,0,0,0"/>
                    <Button Content="✕" Width="40" Height="40" HorizontalAlignment="Right"
                            Background="Transparent" Foreground="White" BorderThickness="0"
                            Click="Close_Click"/>
                </Grid>

                <TabControl x:Name="MainTabControl" Background="#1F1F1F" Foreground="White"
                            SelectionChanged="MainTabControl_SelectionChanged"
                            FontSize="14" Padding="5">

                    <TabItem Header="Apk To dlls">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel Margin="25">
                                <TextBlock Text="Select APK File:" FontSize="14" FontWeight="SemiBold"/>
                                <DockPanel>
                                    <TextBox x:Name="ApkFileTextBox" Width="550" IsReadOnly="True"/>
                                    <Button Content="Browse" Width="100" Click="BrowseApk_Click"/>
                                </DockPanel>

                                <TextBlock Text="Output Directory:" FontSize="14" FontWeight="SemiBold"/>
                                <TextBox x:Name="OutputDirTextBox" Width="550" IsReadOnly="True"/>

                                <Button Content="Run Cpp2IL" Width="180" Height="45" Click="RunCpp2Il_Click" Margin="0,10,0,0"/>

                                <TextBlock Text="Output Log:" FontSize="14" FontWeight="SemiBold" Margin="0,15,0,5"/>
                                <TextBox x:Name="ApkOutputTextBox" Height="220" IsReadOnly="True"
                                         AcceptsReturn="True" VerticalScrollBarVisibility="Auto"/>
                            </StackPanel>
                        </ScrollViewer>
                    </TabItem>
                </TabControl>
            </DockPanel>
        </Grid>
    </Border>
</Window>
